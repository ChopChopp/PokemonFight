<?xml version="1.0" encoding="UTF-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background"
        android:layout_width="412dp"
        android:layout_height="730dp"
        android:contentDescription="@string/pokemonTextDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fightbackground" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifOwn"
        android:layout_width="244dp"
        android:layout_height="429dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/charizard"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifOwn2"
        android:layout_width="244dp"
        android:layout_height="429dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/greninja"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifOwn3"
        android:layout_width="244dp"
        android:layout_height="429dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/sceptile"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifOwn4"
        android:layout_width="244dp"
        android:layout_height="429dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/luxray"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifOpponent"
        android:layout_width="170dp"
        android:layout_height="371dp"
        android:layout_marginStart="224dp"
        android:src="@drawable/greninja_foe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changePokemonBtn"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="592dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_changepokemon"
        android:text="Change PokÃ©mon"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/move1Btn"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_fightattack"
        android:text="Focus blast"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/move3Btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/move3Btn"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="516dp"
        android:background="@drawable/shape_flyattack"
        android:text="Air slash"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/move4Btn"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="444dp"
        android:background="@drawable/shape_fireattack"
        android:text="Flamethrower"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/move2Btn"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="444dp"
        android:background="@drawable/shape_leafattack"
        android:text="Solar beam"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/soundToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/hpBarOwn"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="162dp"
        android:layout_height="19dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="172dp"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="100"
        android:progressDrawable="@drawable/shape_progressbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/hpBarOpponent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="162dp"
        android:layout_height="19dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="56dp"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="100"
        android:progressDrawable="@drawable/shape_progressbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemonNameOwn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="pokemonNameOwn"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemonNameOpponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="248dp"
        android:layout_marginTop="36dp"
        android:text="pokemonNameOpponent"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#F7BE1010"
        android:textColorLink="#7A5656"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
