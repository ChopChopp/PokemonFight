<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background"
        android:layout_width="412dp"
        android:layout_height="730dp"
        android:contentDescription="@string/pokemonTextDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fightbackground" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifOwn"
        android:layout_width="244dp"
        android:layout_height="429dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/charizard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifOpponent"
        android:layout_width="170dp"
        android:layout_height="371dp"
        android:layout_marginStart="224dp"
        android:src="@drawable/greninja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changePokemonBtn"

        android:layout_width="378dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="592dp"
        android:background="@drawable/shape_changepokemon"
        android:text="Change PokÃ©mon"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/focusBlastBtn"

        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="516dp"
        android:background="@drawable/shape_fightattack"
        android:text="Focus blast"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/solarBeamBtn"

        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_marginStart="216dp"

        android:layout_marginTop="444dp"
        android:background="@drawable/shape_leafattack"
        android:text="Solar beam"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/airSlashBtn"

        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_marginStart="216dp"

        android:layout_marginTop="516dp"
        android:background="@drawable/shape_flyattack"
        android:text="Air slash"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flameThrowerBtn"

        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="444dp"
        android:background="@drawable/shape_fireattack"
        android:text="Flamethrower"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>