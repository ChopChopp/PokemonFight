<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp5"
    tools:context=".ChoosePokemon">

    <TextView
        android:id="@+id/textView"
        android:layout_width="318dp"
        android:layout_height="87dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="44dp"
        android:text="Choose your Pokemon"
        android:textColor="@android:color/white"
        android:textSize="80px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="512dp"
        android:layout_marginTop="145dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/rectanglebox"
            android:clickable="true"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="97dp"
                android:layout_weight="25"
                android:src="@drawable/charizard_prof" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/rectanglebox"
            android:clickable="true"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="97dp"
                android:layout_weight="25"
                android:src="@drawable/greninja_prof" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/rectanglebox"
            android:clickable="true"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="97dp"
                android:layout_weight="25"
                android:src="@drawable/luxray_prof" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/rectanglebox"
            android:clickable="true"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="97dp"
                android:layout_weight="25"
                android:src="@drawable/sceptile_prof" />
        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>