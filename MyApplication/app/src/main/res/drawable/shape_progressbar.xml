<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="#00C0C0C0" android:centerColor="#00F8F8FF"
                android:centerY="0.75" android:endColor="#00FFFFFF" android:angle="90" />
            <stroke android:width="3dp" android:color="#000000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="#4BFF00" android:endColor="#289715"
                    android:angle="90" />
                <stroke android:width="3dp" android:color="#030303" />
            </shape>
        </clip>
    </item>
</layer-list>